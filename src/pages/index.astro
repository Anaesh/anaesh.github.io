   <!-- Education Section (Timeline Format - Consistent Style) -->
  <section id="education" class="section">
    <div class="container">
      <h2 class="section-title">Education</h2>
      <div class="education-timeline"> <!-- Use education-timeline class -->

        <div class="education-item fade-in-up"> <!-- Use education-item class -->
          <div class="education-marker"></div> <!-- Use education-marker class -->
          <div class="education-content bg-card"> <!-- Use education-content class -->
            <span class="education-date">2014 - 2018</span> <!-- Use education-date class -->
            <h5 class="text-accent">B.Tech. - Information Technology</h5> <!-- Use h5 for degree -->
            <p>Sri Ramakrishna Institute of Technology, Coimbatore</p> <!-- Use p for institution -->
            <span class="score">CGPA: 6.58</span> <!-- Keep score class -->
          </div>
        </div>

        <div class="education-item fade-in-up">
          <div class="education-marker"></div>
          <div class="education-content bg-card">
            <span class="education-date">2013 - 2014</span>
            <h5 class="text-accent">12th Standard</h5>
            <p>Dharussalam Higher Secondary School, Kadayanallur</p>
            <span class="score">Percentage: 68.60%</span>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section">
    <div class="container">
      <h2 class="section-title">Get In Touch</h2>
      <p class="lead mb-4 text-center">Feel free to reach out via email or connect with me on LinkedIn.</p>
      <div class="row g-4 text-center justify-content-center">
        <div class="col-md-4 contact-method fade-in-up">
          <i class="contact-icon bi bi-telephone"></i>
          <h5>Phone</h5>
          <a href="tel:+918012309606" class="contact-link">+91 8012309606</a>
        </div>
        <div class="col-md-4 contact-method fade-in-up">
          <i class="contact-icon bi bi-envelope-at"></i>
          <h5>Email</h5>
          <a href="mailto:anaeshkn@gmail.com" class="contact-link">anaeshkn@gmail.com</a>
        </div>
        <div class="col-md-4 contact-method fade-in-up">
          <i class="contact-icon bi bi-linkedin"></i>
          <h5>LinkedIn</h5>
          <a href="https://www.linkedin.com/in/kn-anaesh-19a405132/" target="_blank" class="contact-link">Profile</a>
        </div>
      </div>
      <!-- Optional: Add a simple contact form here if desired -->
    </div>
  </section>
</Layout>